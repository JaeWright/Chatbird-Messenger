<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.finalproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Tic-Tac-Toe Game">
        <font>
          <Font size="20.0"/>
        </font>
    </Label>
    <Label fx:id="currentPlayer" prefHeight="18.0" prefWidth="125.0" text="Play Turn"/>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="tile00" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick00"
                prefHeight="175.0" prefWidth="175.0" text="[0,0]" textAlignment="CENTER" GridPane.columnIndex="0"
                GridPane.rowIndex="0" focusTraversable="false"/>
        <Button fx:id="tile01" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick01"
                prefHeight="175.0" prefWidth="175.0" text="[0,1]" textAlignment="CENTER" GridPane.columnIndex="1"
                GridPane.rowIndex="0" focusTraversable="false"/>
        <Button fx:id="tile02" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick02"
                prefHeight="175.0" prefWidth="175.0" text="[0,2]" textAlignment="CENTER" GridPane.columnIndex="2"
                GridPane.rowIndex="0" focusTraversable="false"/>
        <Button fx:id="tile10" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick10"
                prefHeight="175.0" prefWidth="175.0" text="[1,0]" textAlignment="CENTER" GridPane.columnIndex="0"
                GridPane.rowIndex="1" focusTraversable="false"/>
        <Button fx:id="tile11" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick11"
                prefHeight="175.0" prefWidth="175.0" text="[1,1]" textAlignment="CENTER" GridPane.columnIndex="1"
                GridPane.rowIndex="1" focusTraversable="false"/>
        <Button fx:id="tile12" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick12"
                prefHeight="175.0" prefWidth="175.0" text="[1,2]" textAlignment="CENTER" GridPane.columnIndex="2"
                GridPane.rowIndex="1" focusTraversable="false"/>
        <Button fx:id="tile20" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick20"
                prefHeight="175.0" prefWidth="175.0" text="[2,0]" textAlignment="CENTER" GridPane.columnIndex="0"
                GridPane.rowIndex="2" focusTraversable="false"/>
        <Button fx:id="tile21" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick21"
                prefHeight="175.0" prefWidth="175.0" text="[2,1]" textAlignment="CENTER" GridPane.columnIndex="1"
                GridPane.rowIndex="2" focusTraversable="false"/>
        <Button fx:id="tile22" alignment="CENTER" mnemonicParsing="false" onAction="#buttonClick22"
                prefHeight="100.0" prefWidth="175.0" text="[2,2]" textAlignment="CENTER" GridPane.columnIndex="2"
                GridPane.rowIndex="2" focusTraversable="false"/>
    </GridPane>
    <Button mnemonicParsing="false" text="Start New Game" textAlignment="CENTER" onAction="#newGame" focusTraversable="false">
        <opaqueInsets>
          <Insets/>
        </opaqueInsets>
    </Button>
</VBox>
